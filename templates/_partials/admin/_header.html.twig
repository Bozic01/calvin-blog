<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
        <a href="{{ path('admin_dashboard') }}" class="logo d-flex align-items-center">
            <img src="{{ asset('admin-assets/img/logo.png') }}" alt="">
            <span class="d-none d-lg-block">NiceAdmin</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->
    {% if (app.request.get('_route') in ['admin_post_post_index', 'page_page_index', 'post_comment_index', 'admin_user_index', 'contact_list']) %}
        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="GET">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword" value="{{ app.request.query.get('query') }}">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div>
    {% endif %}

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li><!-- End Search Icon-->

            {% if (app.user) %}
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        {% if (app.user.photo) %}
                            <img src=" {{ vich_uploader_asset(app.user,'imageFile') | imagine_filter('featured_image_thumbnail')}}">
                        {% endif %}
                        <span class="d-none d-md-block dropdown-toggle ps-2">{{ (app.user.name) }}</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>{{ (app.user.name) }}</h6>

                            <span>{{(app.user.roles|join(','))}}</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="{{ path('admin_user_show', {'id': app.user.id}) }}">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="{{ path('homepage') }}">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Public</span>
                            </a>
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li>
            {% endif %}

        </ul>
    </nav><!-- End Icons Navigation -->

</header><!-- End Header -->
