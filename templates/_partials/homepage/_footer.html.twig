<footer class="s-footer">

    <div class="s-footer__main">

        <div class="row">
            {% set about_our_site = get_setting_value('ABOUT_OUR_SITE') %}
            {% if about_our_site is not null %}
                <div class="column large-3 medium-6 tab-12 s-footer__info">

                    <h5>About Our Site</h5>

                    <p>
                        {{ about_our_site.settingValue }}
                    </p>

                </div> <!-- end s-footer__info -->
            {% endif %}
            <div class="column large-2 medium-3 tab-6 s-footer__site-links">

                <h5>Site Links</h5>
                <ul>
                    <li><a href="{{ path('homepage_page', {tag: 'about'}) }}">About Us</a></li>
                    <li><a href="{{ path('homepage_page', {tag: 'blog'}) }}">Blog</a></li>
                    <li><a href="{{ path('homepage_page', {tag: 'faq'}) }}">FAQ</a></li>
                    <li><a href="{{ path('homepage_page', {tag: 'terms'}) }}">Terms</a></li>
                    <li><a href="{{ path('homepage_page', {tag: 'privacy-policy'}) }}">Privacy Policy</a></li>
                </ul>
                {% if app.user %}
                    <div class="bx-log-out">
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('app_logout') }}">
                            <input type="button" value="logout" name="Logout">
                        </a>
                    </div>
                {% else %}
                    <div class="bx-log-in">
                        <a class="dropdown-item d-flex align-items-center" href="{{ path('app_login') }}">
                            <input type="button" value="login" name="Login">
                        </a>
                    </div>
                {% endif %}
            </div> <!-- end s-footer__site-links -->

            <div class="column large-2 medium-3 tab-6 s-footer__social-links">

                <h5>Follow Us</h5>

                <ul>
                    {% set twitter = get_setting_value('TWITTER') %}
                    {% if twitter is not null %}
                        <li><a href="{{ twitter.settingValue }}" target="_blank">Twitter</a></li>
                    {% endif %}

                    {% set facebook = get_setting_value('FACEBOOK') %}
                    {% if facebook is not null %}
                        <li><a href="{{ facebook.settingValue }}" target="_blank">Facebook</a></li>
                    {% endif %}

                    {% set dribbble = get_setting_value('DRIBBBLE') %}
                    {% if dribbble is not null %}
                        <li><a href="{{ dribbble.settingValue }}" target="_blank">Dribbble</a></li>
                    {% endif %}

                    {% set pinterest = get_setting_value('PINTEREST') %}
                    {% if pinterest is not null %}
                        <li><a href="{{ pinterest.settingValue }}" target="_blank">Pinterest</a></li>
                    {% endif %}

                    {% set instagram = get_setting_value('INSTAGRAM') %}
                    {% if instagram is not null %}
                        <li><a href="{{ instagram.settingValue }}" target="_blank">Instagram</a></li>
                    {% endif %}

                    {% set phone = get_setting_value('PHONE') %}
                    {% if phone is not null %}
                        <li><a href="{{ phone.settingValue }}" target="_blank">Phone</a></li>
                    {% endif %}
                </ul>

            </div> <!-- end s-footer__social links -->

            <div class="column large-3 medium-6 tab-12 s-footer__subscribe">

                <h5>Sign Up for Newsletter</h5>

                <p>Signup to get updates on articles, interviews and events.</p>

                <div class="subscribe-form">

                    <form id="mc-form" class="group" action="{{ path('homepage_newsletter_signup') }}">
                        <div class="alert-box alert-newsletter" style="display: none"></div>
                        <input type="email" value="" name="newsletterEmail" class="email" id="email" placeholder="Your Email Address" required="required">

                        <input id="subscribe" type="submit" name="subscribe" value="subscribe">

                        <label for="mc-email" class="subscribe-message"></label>

                    </form>

                </div>

            </div> <!-- end s-footer__subscribe -->

        </div> <!-- end row -->

    </div> <!-- end s-footer__main -->
    <div class="s-footer__bottom">
        <div class="row">
            <div class="column">
                {% set copyright = get_setting_value('COPYRIGHT') %}
                {% if copyright is not null %}
                    <div class="ss-copyright">
                        <span>{{ copyright.settingValue }}</span>
                        <span>Design by <a href="https://www.styleshout.com/">StyleShout</a></span>
                    </div> <!-- end ss-copyright -->
                {% endif %}
            </div>
        </div>

        <div class="ss-go-top">
            <a class="smoothscroll" title="Back to Top" href="#top">
                <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
                    <path d="M7.5 1.5l.354-.354L7.5.793l-.354.353.354.354zm-.354.354l4 4 .708-.708-4-4-.708.708zm0-.708l-4 4 .708.708 4-4-.708-.708zM7 1.5V14h1V1.5H7z"
                          fill="currentColor"></path>
                </svg>
            </a>
        </div> <!-- end ss-go-top -->
    </div> <!-- end s-footer__bottom -->

</footer> <!-- end s-footer -->
