<section id="hero" class="s-hero">

    <div class="s-hero__slider">

        {% for featuredSlide in get_featured_posts() %}
            <div class="s-hero__slide">

                <div class="s-hero__slide-bg" style="background-image: url({% if (featuredSlide.featuredImage) %}
                    {{ vich_uploader_asset(featuredSlide ,'imageFile') | imagine_filter('featured_image') }}
                {% endif %})"></div>

                <div class="row s-hero__slide-content animate-this">
                    <div class="column">
                        <div class="s-hero__slide-meta">
                            <span class="cat-links">
                                {% for postCategoryCategory in featuredSlide.postCategoryCategories %}
                                    <a href="{{ path('homepage_post_list') ~ '?category-id=' ~ postCategoryCategory.postCategory.id }}">{{ postCategoryCategory.postCategory.title }}</a>
                                {% endfor %}
                            </span>
                            {% if (featuredSlide.user) is not null %}
                                <span class="byline">
                                Posted by
                                <span class="author">
                                    <a href="{{ path('homepage_post_list') ~ '?author-id=' ~ featuredSlide.user.id }}">{{ featuredSlide.user.name }}</a>
                                </span>
                            </span>
                            {% endif %}
                        </div>
                        <h1 class="s-hero__slide-text">
                            <a href="{{ path('homepage_post_show', {'id': featuredSlide.id}) }}">
                                {{ featuredSlide.title }}
                            </a>
                        </h1>
                    </div>
                </div>

            </div>
        {% endfor %}

    </div> <!-- end s-hero__slider -->

    <div class="s-hero__social hide-on-mobile-small">
        <p>Follow</p>
        <span></span>
        <ul class="s-hero__social-icons">
            {% set facebook = get_setting_value('FACEBOOK') %}
            {% if facebook is not null %}
                <li><a href="{{ facebook.settingValue }}" target="_blank"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
            {% endif %}

            {% set twitter = get_setting_value('TWITTER') %}
            {% if twitter is not null %}
                <li><a href="{{ twitter.settingValue }}" target="_blank"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
            {% endif %}

            {% set instagram = get_setting_value('INSTAGRAM') %}
            {% if instagram is not null %}
                <li><a href="{{ instagram.settingValue }}" target="_blank"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
            {% endif %}

            {% set dribbble = get_setting_value('DRIBBBLE') %}
            {% if dribbble is not null %}
                <li><a href="{{ dribbble.settingValue }}" target="_blank"><i class="fab fa-dribbble" aria-hidden="true"></i></a></li>
            {% endif %}

          {% set phone = get_setting_value('PHONE') %}
            {% if phone is not null %}
                <li><a href="{{ phone.settingValue }}" target="_blank"><i class="fab fa-whatsapp" aria-hidden="true"></i></a></li>
            {% endif %}

            {% set pinterest = get_setting_value('PINTEREST') %}
            {% if pinterest is not null %}
                <li><a href="{{ pinterest.settingValue }}" target="_blank"><i class="fab fa-pinterest" aria-hidden="true"></i></a></li>
            {% endif %}
        </ul>
    </div> <!-- end s-hero__social -->

    <div class="nav-arrows s-hero__nav-arrows">
        <button class="s-hero__arrow-prev">
            <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
                <path d="M1.5 7.5l4-4m-4 4l4 4m-4-4H14" stroke="currentColor"></path>
            </svg>
        </button>
        <button class="s-hero__arrow-next">
            <svg viewBox="0 0 15 15" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
                <path d="M13.5 7.5l-4-4m4 4l-4 4m4-4H1" stroke="currentColor"></path>
            </svg>
        </button>
    </div> <!-- end s-hero__arrows -->

</section> <!-- end s-hero -->

