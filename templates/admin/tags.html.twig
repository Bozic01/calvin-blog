{% extends 'base_admin.html.twig' %}

{% block body %}

    <div class="d-flex w-100 justify-content-between">
        <h1>Tags</h1>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Count</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.tagTitle }}</td>
                <td>{{ tag.tagCount }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}