{% extends 'base_admin.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ post.content | raw }}</td>
        </tr>
        <tr>
            <th>Featured Image</th>
            {% if (post.featuredImage) %}
                <td colspan="2"><img
                            src=" {{ vich_uploader_asset(post ,'imageFile') | imagine_filter('featured_image') }}"></td>
            {% endif %}
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ post.status }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_post_index') }}" class="btn btn-secondary">Back</a>

    <a href="{{ path('admin_post_edit', {'id': post.id}) }}" class="btn btn-dark">Edit</a>

    {{ include('admin/post/post/_delete_form.html.twig') }}
{% endblock %}
